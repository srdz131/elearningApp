<h2>Lessons</h2>

<h2>{{class.title}}'s Lessons</h2>
<table width="50%">
    <thead>
    <tr>
        <th width="200">Lesson Number</th>

        <th width="150">Lesson Title</th>
          <th></th>
            <th></th>
    </tr>
    </thead>
    <tbody>
      {{#each class.lessons}}
        <tr>
          <td>{{lesson_number}}</td>
          <td>{{lesson_title}}</td>
          <td><a href="/classes/{{../class._id}}/lessons/{{lesson_number}}">View Lesson</a></td>
        </tr>
        {{/each}}
    </tbody>
  </table>
